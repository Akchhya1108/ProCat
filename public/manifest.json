{
  "manifest_version": 3,
  "name": "Productivity Cat",
  "version": "1.0",
  "description": "A cute cat that helps you stay productive with Pomodoro timers and entertains you sometimes!",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "cat.png",
      "48": "cat.png",
      "128": "cat.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "icons": {
    "16": "cat.png",
    "48": "cat.png",
    "128": "cat.png"
  }
}